<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/my_book_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:contentDescription="@string/book_image_from_douban" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/my_book_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#A9A9A9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/my_book_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#808080"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/book_item_to_detail"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:contentDescription="@string/button_to_detail"
        android:src="@drawable/ic_chevron_right_black_36dp" />


</LinearLayout>